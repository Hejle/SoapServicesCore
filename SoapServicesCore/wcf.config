<configuration>
  <system.webServer>
    <directoryBrowse enabled="true"/>
    <security>
      <authentication>
        <basicAuthentication enabled="true"/>
      </authentication>
    </security>
  </system.webServer>
  <system.web>
    <authentication mode="Windows"/>
    <customErrors mode="Off"/>
    <httpRuntime maxRequestLength="51200"/>
    <!-- Max upload set to 50mb -->
    <pages controlRenderingCompatibilityVersion="3.5" clientIDMode="AutoID"/>
  </system.web>

  <system.serviceModel>
    <bindings>
      <basicHttpBinding>
        <binding name="BasicHTTPServiceBinding" maxBufferSize="524288000" maxBufferPoolSize="524288000" maxReceivedMessageSize="524288000">
          <readerQuotas maxDepth="31457280" maxStringContentLength="31457280" maxArrayLength="31457280" maxBytesPerRead="31457280" maxNameTableCharCount="31457280"/>
          <security mode="TransportCredentialOnly">
            <transport clientCredentialType="Basic"/>
          </security>
        </binding>
      </basicHttpBinding>
    </bindings>
    <diagnostics performanceCounters="Default">
      <messageLogging logEntireMessage="true" logMalformedMessages="true" logMessagesAtServiceLevel="false" logMessagesAtTransportLevel="false"/>
    </diagnostics>
    <serviceHostingEnvironment multipleSiteBindingsEnabled="false"/>
  </system.serviceModel>
</configuration>
